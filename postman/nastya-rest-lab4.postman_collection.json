              ]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"nastya\",\n  \"password\": \"secret123\"\n}"
            },
            "description": "Login existing user and receive an access token."
          },
          "response": [],
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Save access token from login response', function () {",
                  "  if (pm.response.code === 200 || pm.response.code === 201) {",
                  "    var json = {};",
                  "    try {",
                  "      json = pm.response.json();",
                  "    } catch (e) {}",
                  "    if (json && json.accessToken) {",
                  "      pm.environment.set('token', json.accessToken);",
                  "    }",
                  "  }",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
          ]
        }
      ]
